{
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules/"
  ],
  "coverageReporters": ["lcov", "text"],
  "moduleFileExtensions": ["js", "ts"],
  "roots": ["<rootDir>/src"],
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/src/**/__tests__/**/*.ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  }
}
